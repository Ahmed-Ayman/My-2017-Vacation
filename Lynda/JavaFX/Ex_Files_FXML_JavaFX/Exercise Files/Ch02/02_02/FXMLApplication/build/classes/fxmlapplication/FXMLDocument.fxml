<?xml version="1.0" encoding="UTF-8"?>
<?language JavaScript?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="300.0" spacing="10" 
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="fxmlapplication.FXMLDocumentController">

  <children>
    <Label fx:id="inputLbl" alignment="CENTER_LEFT"  prefHeight="30.0" prefWidth="200.0" 
           text="Please insert Your Input here:" textAlignment="LEFT" />
    
    <!-- inputText is bound to variable in controller file -->
    <TextField fx:id="inputText" prefWidth="100.0" />
    
    <Button fx:id="okBtn" alignment="CENTER_RIGHT" contentDisplay="CENTER" 
            text="OK" textAlignment="CENTER" 
            onAction="#printOutput" />
    
    <Label fx:id="outputLbl" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" 
           text="Here is Your Input:" textAlignment="LEFT" />
    
        <!-- outputText is bound to variable in controller file -->
    <TextArea fx:id="outputText" prefHeight="100.0" prefWidth="200.0" 
              wrapText="true" />

  </children>
  
    <style>
	-fx-padding: 10;
	-fx-border-style: solid inside;
	-fx-border-width: 2;
	-fx-border-insets: 5;
	-fx-border-radius: 5;
	-fx-border-color: orange;
  </style>
</VBox>
